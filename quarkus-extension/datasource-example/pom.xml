<?xml version="1.0"?>
<project xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd"
         xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <modelVersion>4.0.0</modelVersion>

  <groupId>org.camunda.bpm.quarkus.example</groupId>
  <artifactId>camunda-bpm-quarkus-example-datasource</artifactId>
  <version>1.0.0-SNAPSHOT</version>

  <properties>
    <version.camunda>7.18.0</version.camunda>
    <version.quarkus>2.8.2.Final</version.quarkus>
    <version.assertj>3.21.0</version.assertj>
    <version.compiler-plugin>3.10.1</version.compiler-plugin>
    <version.surefire-plugin>3.0.0-M6</version.surefire-plugin>

    <maven.compiler.parameters>true</maven.compiler.parameters>
    <maven.compiler.source>11</maven.compiler.source>
    <maven.compiler.target>11</maven.compiler.target>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
  </properties>

  <dependencyManagement>
    <dependencies>
      <dependency>
        <groupId>io.quarkus.platform</groupId>
        <artifactId>quarkus-bom</artifactId>
        <version>${version.quarkus}</version>
        <type>pom</type>
        <scope>import</scope>
      </dependency>
    </dependencies>
  </dependencyManagement>

  <dependencies>

    <!-- CAMUNDA -->

    <dependency>
      <groupId>org.camunda.bpm.quarkus</groupId>
      <artifactId>camunda-bpm-quarkus-engine</artifactId>
      <version>${version.camunda}</version>
    </dependency>

    <!-- QUARKUS -->

    <dependency>
      <groupId>io.quarkus</groupId>
      <artifactId>quarkus-arc</artifactId>
    </dependency>

    <dependency>
      <groupId>io.quarkus</groupId>
      <artifactId>quarkus-resteasy</artifactId>
    </dependency>

    <dependency>
      <groupId>io.quarkus</groupId>
      <artifactId>quarkus-jdbc-h2</artifactId>
    </dependency>

    <!-- additional datasource dependencies -->
<!--    <dependency>-->
<!--      <groupId>io.quarkus</groupId>-->
<!--      <artifactId>quarkus-jdbc-postgresql</artifactId>-->
<!--    </dependency>-->
