  <groupId>org.camunda.bpm.quarkus.example</groupId>
  <artifactId>camunda-bpm-quarkus-example-datasource</artifactId>
  <version>1.0.0-SNAPSHOT</version>

  <properties>
    <version.camunda>7.19.0</version.camunda>
    <version.quarkus>2.16.4.Final</version.quarkus>
    <version.assertj>3.22.0</version.assertj>
    <version.compiler-plugin>3.10.1</version.compiler-plugin>
    <version.surefire-plugin>3.0.0-M6</version.surefire-plugin>

    <maven.compiler.parameters>true</maven.compiler.parameters>
    <maven.compiler.source>11</maven.compiler.source>
    <maven.compiler.target>11</maven.compiler.target>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
  </properties>

  <dependencyManagement>
    <dependencies>
      <dependency>
        <groupId>io.quarkus.platform</groupId>
        <artifactId>quarkus-bom</artifactId>
        <version>${version.quarkus}</version>
        <type>pom</type>
        <scope>import</scope>
      </dependency>
    </dependencies>
  </dependencyManagement>

