<?xml version="1.0" encoding="UTF-8"?>
<jboss-deployment-structure>
  <deployment>
    <exclude-subsystems>
      <!-- exclude jaxrs subsystem, which are added implicit by WildFly -->
      <subsystem name="jaxrs"/>
    </exclude-subsystems>
    <dependencies>
      <!-- Add jackson dependencies with the version which is used by spin. -->
      <module name="com.fasterxml.jackson.core.jackson-annotations" slot="2.13.2.20220328" export="true"/>
      <module name="com.fasterxml.jackson.core.jackson-core" slot="2.13.2.20220328" export="true"/>
      <module name="com.fasterxml.jackson.core.jackson-databind" slot="2.13.2.20220328" export="true"/>
      <!-- Add other modules, which are needed by your application and part of the jaxrs subsystem -->
    </dependencies>
  </deployment>
</jboss-deployment-structure>